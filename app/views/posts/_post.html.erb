
<div class="col-sm-6 col-lg-4">
  <div class="card">
    <div class="card__cardTop" style='background-image: url(<%= post.banner_image_url %>);'></div>
    <div class="card__cardBlock">
      <h4 class="card__cardTitle">
        <%= link_to(post) do %>
          <%= post.title %>
        <% end %>
      </h4>
      <p class="card__datePublished">Published <%= time_ago_in_words(post.created_at)%> ago</p>
      <p class="card__cardText"><%= truncate(post.description, length: 140) %></p>
      <%= link_to 'Read', post, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>
