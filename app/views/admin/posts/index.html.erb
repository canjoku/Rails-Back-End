<%= provide(:page_title, 'All Posts') %>

<h1 align="center">All Posts</h1><hr>

<div class="container pagination justify-content-center" >
  <%= will_paginate @users, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
</div>

<div class="row">
  <div>
    <%= link_to "New post", new_admin_post_path, class: 'btn btn-secondary btn-sm'%>
  </div>
  <table class="table">
    <tr>
      <th colspan="4">Title</th>
    </tr>
    <%= render @posts %>
  </table>
</div>

<div class="container pagination justify-content-center" >
  <%= will_paginate @users, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
</div>