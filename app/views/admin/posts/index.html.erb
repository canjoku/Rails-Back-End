<%= provide(:page_title, 'All Posts') %>

<h1 class="heading">All Posts</h1>

<%= will_paginate @posts %>

<table class="c-posts-table">
  <thead>
    <tr>
      <th class="c-posts-table__head--title">Title</th>
      <th class="c-posts-table__head--date-posted">Posted</th>
      <th class="c-posts-table__head--author">Author</th>
      <th class="c-posts-table__head-btn--create">
        <%= link_to "Create New post", new_admin_post_path %>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts %>
</table>

<%= will_paginate @posts %>

