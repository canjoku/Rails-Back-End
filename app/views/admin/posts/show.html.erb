<%= provide(:page_title, @post.title) %>

<div class>
  <%= link_to 'Edit', edit_admin_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Remove', admin_post_path(@post), method: :delete, data: {
    confirm: 'Confirm delete action!'}, class: 'btn btn-sm btn-danger' %>
</div>

<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
  <h1><%= @post.title %></h1>
  <p><%= @post.display_day_published %></p>
  <p><%= @post.description%></p>
  <p><%= @post.body%></p>
  </div>
</div>