<%= form_for [:admin, @post], html: {class: "o-form c-post-form"} do |f| %>
  <%= render 'shared/errors', object: post %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title, class: "o-form__field--text-field", data: { field: "title"}, id:"title" %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.text_area :body, rows: 12, class: "o-form__field--text-area", data: { field: "body"}, id: "body" %>
  </div>
  <div>
    <%= f.submit "Create Post", class: "o-form__btn--submit", data: { field: "create-post"} %>
  <div>
<% end %>

