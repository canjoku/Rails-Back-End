<%= form_for([:admin, post], html: {class: "c-post-form"}) do |f| %>
  <%= render 'shared/errors', object: post %>
  <div>
    <%= f.label :title, class: "c-post-form__label--title" %>
  </div>
  <div>
    <%= f.text_field :title, class: "c-post-form__field--title" %>
  </div>
  <div>
    <%= f.label :banner_image_url, class: "c-post-form__label--image" %>
  </div>
  <div>
    <%= f.text_field :banner_image_url, class: "c-post-form__field--image" %>
  </div>
  <div>
    <%= f.label :description, class: "c-post-form__label--description" %>
  </div>
  <div>
    <%= f.text_area :description, rows: 5, class: "c-post-form__field--description" %>
  </div>
  <div>
    <%= f.label :body, class: "c-post-form__label--body" %>
  </div>
  <div>
    <%= f.text_area :body, rows: 12, class: "c-post-form__field--body" %>
  </div>
  <div>
    <%= f.submit "Create Post", class: "c-post-form__btn--submit" %>
  <div>
<% end %>

<div>
  <% if @post.persisted? %>
    <button class="o-btn o-btn__btn--green">
      <%= link_to 'Show', @post %>
    </button>
  <% end %>
</div>



