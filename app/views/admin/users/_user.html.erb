<tr class="c-users-table__body--username">
  <td>
    <%= link_to(user) do %>
      <%= user.username %>
    <% end %>
  </td>
  <td class="c-users-table__body--date-created">
    <%= link_to(user) do %>
      <%= time_ago_in_words (user.created_at) %>
    <% end %>
  </td>
  <td class="o-btn o-btn__btn--blue">
    <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-warning' %>
  </td>
  <td class="o-btn o-btn__btn--pink">
    <%= link_to 'Remove', admin_user_path(user), method: :delete,
    data: { confirm: 'Are you sure you want to delete this user and all associated posts?'}, class: 'btn btn-sm btn-danger' %>
  </td>
