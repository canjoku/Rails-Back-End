
<div class="container">
  <div class=row>
    <div class="col-md-8 offset-md-2">
      <% if @subscribers.exists? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr class="table-success">
              <th scope="col">No.</th>
              <th scope="col">Emails</th>
            </tr>
          </thead>
          <tbody>
            <% @subscribers.each.with_index do |subscriber, index| %>
              <tr>
              <th scope="row"><%= index+1 %></th>
                <td>
                  <%= subscriber.email %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>There are currently no registered subscribers</p>
      <% end %>
    </div>
  </div>
</div>