
<div class="col-sm-6 col-lg-4">
  <div class="card">
    <div class="card__card-top" style='background-image: url(<%= post.banner_image_url %>);'></div>
    <div class="card__card-block">
      <h4 class="card__card-title">
        <%= link_to(post) do %>
          <%= post.title %>
        <% end %>
      </h4>
      <p class="card__date-published">Published <%= time_ago_in_words(post.created_at)%> ago</p>
      <p class="card__card-text"><%= truncate(post.description, length: 140) %></p>
      <%= link_to 'Read', post, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>